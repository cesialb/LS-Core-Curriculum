<!doctype html>
  <body>
  <ul>
    <% @filenames.each do |filename| %>
      <li>
        <a href="<%= filename %>"><%= filename %></a>
      </li>
    <% end %>
  </ul>

  <p>
    <% if params[:sort] == "desc" %>
      <a href="/">Sort ascending</a>
    <% else %>
      <a href="/?sort=desc">Sort descending</a>
    <% end %>
  </p>
  </body>
</html>